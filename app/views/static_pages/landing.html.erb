  </div>
   
  
  
  <div class="row fullwidth no_padding footer">  
  
  	<div class="small-12 large-5 columns">
    
    	 <%= form_for @user, url: { action: "create" } do |f| %>
        <label>Get notified when Milieu is live
          <%= f.text_field :email, placeholder: "EMAIL ADDRESS" %> 
        </label>
      </div> 
      
      <div class="small-12 large-3 columns no_padding">
          <%= f.submit "NOTIFY ME", class: "button left" %>
      </div>
    <% end %>
      
